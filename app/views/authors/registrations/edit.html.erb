<div class="login" style="background-color: #F3F3F4">
    <div class="login-bottom">
          
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" ,:id=>'reset-form', method: :put }) do |f| %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <%= devise_error_messages! %>

            <div class="col-md-12">
                  <%= f.label :current_password %> <i></i>
                  <%= f.password_field :current_password, autocomplete: "off" %>
              <div class="field">
                <label>New Password</label>
                <%= f.password_field :password, autocomplete: "off" %>
              </div>

              <div class="field">
                <label>Confirm Password</label>
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </div>

            </div>

              <div class="actions">
                <%= f.submit "Update" %>
              </div>
            
              <div class="clearfix"> </div>
            <% end %>
    </div>
</div>