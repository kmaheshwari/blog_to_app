<div class="block-header"> </div>

          <div class="card">
      <h2>Sign up</h2>



      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "form-horizontal"}) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group col-sm-12">

         <%= f.label :email %>
          <%= f.email_field :email, class: "form-control col-sm-3",autofocus: true %>
        </div>

        <br><br>

        <div class="field">

     <%= f.hidden_field :password, autocomplete: "off" ,:value=> @temp_pass %>
   
   </div>


        

        
        <div class="form-group col-sm-12">

       <label> Url</label> 
       <input type="text" name="url" id ="url" class="form-control col-sm-3" value="http://"> </input>
       
       </div>

        <div class="actions">
          <%= f.submit "Next" %>
        </div>
      <% end %>


</div>
